@model Holistica.Models.ViewModels.CartItemViewModel

<div class="cart">
	<h2>Your Cart</h2>
	@if (Model.CartItems.Any())
	{
		<ul>
			@foreach (var item in Model.CartItems)
			{
				<li>
					Product ID: @item.ProductId - Quantity: @item.Quantity
				</li>
			}
		</ul>
	}
	else
	{
		<p>Your cart is empty.</p>
	}
</div>