@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Product
<link rel="stylesheet" href="~/css/Shop.css" />
<script src="js/dotorcomma.js"></script>

<body>
	<div>
		<form asp-action="Change" method="post">
			<div>
				<input type="hidden" id="productId" name="productId" value="@Model.ProductId" />
				<div>
					<label for="URL">Url for image:</label>
					<input type="text" id="ImageUrl" name="ImageUrl" placeholder="@Model.ImageUrl" required />
				</div>
				<div>
					<label for="Name">Product Name:</label>
					<input type="text" id="Name" name="Name" placeholder="@Model.Name" required />
				</div>
				<div>
					<label for="Price">Price:</label>
					<input type="text" id="Price" name="Price" placeholder="@Model.Price" required/>
				</div>
				<div>
					<label for="Quantity">Quantity:</label>
					<input type="number" id="Quantity" name="Quantity" placeholder="@Model.Quantity" required step="1" />
				</div>
				<div>
					<label for="Description">Description:</label>
					<textarea id="Description" name="Description" placeholder="@Model.Description" required></textarea>
				</div>
				<div>
					<button type="submit">Apply Changes</button>
				</div>
			</div>
		</form>
	</div>
</body>